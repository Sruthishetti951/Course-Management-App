@using ProblemAssignmnet2_SruthiKamisetti.Entities;
@model Course;
@{
    ViewData["Title"] = "Add New Course";
}

<form asp-action="PostAddNewCourse" asp-controller="Course" method="post" enctype="application/x-www-form-urlencoded">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="CourseName">Name</label>
        <input type="text" asp-for="CourseName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Instructor">Instructor</label>
        <input type="text" asp-for="Instructor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RoomNumber">Room Number</label>
        <input type="text" asp-for="RoomNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Add</button>
    <a class="btn btn-primary mt-4" asp-action="GetAllCourses" asp-controller="Course">Cancel</a>

</form>

